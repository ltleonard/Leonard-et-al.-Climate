#2016 FTIR data: Code to baseline correct and plot provided by Zhao Hao. 
setwd("/FilePath/2016Needles/")  ### set a working directory
require(hyperSpec)  ### or library(hyperSpec) load the library
require(zoo)  ### to use rowMean fuction for peak intergration
source("assemble.data.R")    ### load in assemble.data function for importing csv data into a hyperSpec object.
dat.pat <- "/Users/lleonard/Documents/R/2016_Needles_Integration/"   ### the directory of the csv data
dat.fns <- list.files(dat.pat, "*.csv")     ### list all the csv files in the csv directory
dat.sns <- substr(dat.fns, 1, nchar(dat.fns) - 4) ### name the samples with unique names, here I use the name of the files.
# assemble the csv files to a hyperSpec object.
df.dat <- assemble.data(paste(dat.pat, dat.fns, sep = ""), data.frame(dat.sns))
# cut to the low frequency side of spectra. 
df.cut <- df.dat[,, 700 ~ 1850]
df.cor <- df.cut - spc.rubberband(df.cut)  ### baseline correction with a rubberband profile
df.norm <- sweep (df.cor, 1, mean, "/")   ### normalization - may not be needed.
#Plot the spectra:
Spectra2016=plotspc(df.norm, col = c("darkgreen", "black"), nxticks=20)

#2019 FTIR data: Code to baseline correct and plot provided by Zhao Hao. 
setwd("/FilePath2019Needles/")  ### set a working directory
require(hyperSpec)  ### or library(hyperSpec) load the library
require(zoo)  ### to use rowMean fuction for peak intergration
source("assemble.data.R")    ### load in assemble.data function for importing csv data into a hyperSpec object.
dat.pat <- "/Users/lleonard/Documents/R/LS_2018_Integration/"   ### the directory of the csv data
dat.fns <- list.files(dat.pat, "*.CSV")     ### list all the csv files in the csv directory
dat.sns <- substr(dat.fns, 1, nchar(dat.fns) - 4) ### name the samples with unique names, here I use the name of the files.
df.dat <- assemble.data(paste(dat.pat, dat.fns, sep = ""), data.frame(dat.sns))   ### assemble the csv files to a hyperSpec object.
df.cut <- df.dat[,, 700 ~ 1850]# cut to the low frequency side of spectra. 
df.cor <- df.cut - spc.rubberband(df.cut)  ### baseline correction with a rubberband profile
df.norm <- sweep (df.cor, 1, mean, "/")   ### normalization - may not be needed.
Spectra2018=plotspc(df.norm, col = c("darkgreen", "black"), nxticks=20)
